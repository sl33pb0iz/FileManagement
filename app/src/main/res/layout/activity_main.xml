<!-- activity_main.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/fragmentSection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/llContainerCopyViewMain"
        android:background="#CFC7C7"
        android:weightSum="10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/tvFilePathMain"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:text="File path"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btnExitMain"
            android:layout_margin="10dp"
            android:layout_weight="3"
            android:backgroundTint="#285EE6"
            android:textSize="10sp"
            android:text="Thoát"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btnCopyMain"
            android:layout_margin="10dp"
            android:layout_weight="5"
            android:backgroundTint="#285EE6"
            android:textSize="10sp"
            android:text="Sao chép vào đây"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
